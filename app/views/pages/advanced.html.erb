<div class="row vertical-center-row">
  <div class="row">
    <div class="col-xs-2 col-xs-offset-5">
      <h1>BuzonLegal</h1>
    </div>
  </div>

  <div class="row" style="margin-top:15px;">
    <div class="col-xs-6 col-xs-offset-3">
      <p class="advanced-options">Opciones de busqueda avanzada:</p>
      <form method="get" action="resultados" class="form-horizontal">
        <div class="form-group">
          <label for="q" class="col-sm-2 control-label">Busqueda</label>
          <div class="col-sm-10">
            <input name="q" type="text" class="form-control" id="q" placeholder="Ingresa # de caso o tu nombre">
          </div>
        </div>

        <hr />

        <div class="form-group">
          <label for="qState" class="col-sm-2 control-label">Estado</label>
          <div class="col-sm-10">
            <%= select_tag "state", options_for_select(State.pluck(:name, :id)), include_blank: true, class:"form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label for="jury" class="col-sm-2 control-label">Juzado</label>
          <div class="col-sm-10">
            <select name="jury" id="jury" class="form-control">
            </select>
          </div>
        </div>

        <div class="form-group">
          <label for="datepicker" class="col-sm-2 control-label">Fecha:</label>
          <div class="col-sm-10">
            <input name="date" type="text" class="datepicker form-control">
          </div>
        </div>
        <hr />

        <div class="form-group">
          <div class="col-sm-offset-7 col-sm-5">
            <a href="/" class="btn btn-default">Regresar</a>

            <button type="submit" class="btn btn-default btn-primary">Buscar</button>
          </div>
        </div>
      </form>

    </div>
  </div>
</div>
